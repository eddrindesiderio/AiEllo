# AI API Keys - Replace with your actual keys
# Get OpenAI key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get Anthropic key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Get Hugging Face key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=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

# Discord Bot (optional) - Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# Optional: Advanced features
PINECONE_API_KEY=your-pinecone-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Database (optional)
DATABASE_URL=sqlite:///ai_assistant.db

# Security (for production deployment)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Deployment settings
ENVIRONMENT=development
DEBUG=true
PORT=8000

# AI Model preferences
DEFAULT_MODEL=gpt-3.5-turbo
TEMPERATURE=0.7
MAX_TOKENS=1000

# Local AI settings
USE_LOCAL_AI=true
LOCAL_MODEL_PATH=./models
ENABLE_GPU=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_assistant.log

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
